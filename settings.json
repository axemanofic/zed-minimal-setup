{
  // Opinionated settings
  "icon_theme": "Colored Zed Icons Theme Dark",
  "profiles": {
    "Zed Minimal Setup": {
      "icon_theme": "Colored Zed Icons Theme Dark",
      "theme": "Catppuccin Mocha - No Italics",
      "ui_font_family": "JetBrainsMono Nerd Font",
      "theme_overrides": {
        "Catppuccin Mocha - No Italics": {
          "border.variant": "#1e1e2e",
          "border": "#1e1e2e",
          "title_bar.background": "#1e1e2e",
          "panel.background": "#1e1e2e",
          "panel.focused_border": "#585b70",
          "tab.active_background": "#1e1e2e",
          "tab.inactive_background": "#313244",
          "tab_bar.background": "#1e1e2e"
        }
      }
    }
  },
  // Font Size
  "agent_buffer_font_size": 15.0,
  "buffer_font_size": 15.0,
  "ui_font_size": 15.0,

  // Vim Mode
  "vim_mode": false,
  "relative_line_numbers": "disabled",
  // UI Settings
  "disable_ai": true,
  "outline_panel": { "button": false },
  "collaboration_panel": { "button": false },
  "git_panel": { "button": false },
  "notification_panel": { "button": false },
  "agent": { "button": false },
  "debugger": { "button": false },
  "diagnostics": { "button": false },
  "search": { "button": false },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_user_menu": false,
    "show_sign_in": false,
    "show_menus": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false
  },
  "status_bar": {
    "active_language_button": false,
    "cursor_position_button": false,
    "line_endings_button": false,
    "experimental.show": false // enable if use vim_mode
  },
  "global_lsp_settings": {
    "button": false
  },
  "project_panel": {
    "button": false,
    "default_width": 400,
    "dock": "right",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "sticky_scroll": false,
    "drag_and_drop": false,
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "never"
    },
    "sort_mode": "directories_first",
    "hide_root": true,
    "hide_hidden": false,
    "starts_open": false
  },
  "terminal": {
    "button": false,
    "font_family": "JetBrainsMono Nerd Font",
    "dock": "bottom",
    "toolbar": {
      "breadcrumbs": false
    },
    "minimum_contrast": 45
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "scrollbar": {
    "show": "never"
  },
  "file_finder": {
    "modal_max_width": "xlarge"
  }
}
